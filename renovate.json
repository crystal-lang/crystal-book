{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": ["after 5am and before 8am on the first day of the month"],
  "packageRules": [
    {
      "groupName": "GH Actions",
      "matchManagers": ["github-actions"]
    }
  ],
  "pip-compile": {
    "fileMatch": ["(^|/)requirements\\.in$"],
    "schedule": ["after 5am and before 8am on the first day of the month"]
  },
  "pip_requirements": {
    "enabled": false
  }
}
